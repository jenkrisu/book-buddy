<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp">

<ImageView
    android:id="@+id/listItemImage"
    android:layout_width="54dp"
    android:layout_height="76dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"/>

<TextView
    android:id="@+id/listItemBookTitle"
    style="@style/TextAppearance.AppCompat.Title"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/listItemImage"/>

<TextView
    android:id="@+id/listItemBookAuthor"
    style="@style/TextAppearance.AppCompat.Medium"
    android:textColor="@android:color/primary_text_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/listItemBookTitle"
    android:layout_toEndOf="@+id/listItemImage" />

<TextView
    android:id="@+id/listItemBookPublished"
    style="@style/TextAppearance.AppCompat.Medium"
    android:textColor="@android:color/tertiary_text_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/listItemBookAuthor"
    android:layout_toEndOf="@+id/listItemImage" />

</RelativeLayout>